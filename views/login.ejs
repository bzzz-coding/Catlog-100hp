<%- include('partials/header') -%>




<main class="container mt-6">

  

  

  <div class="">
    <section class="">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>

      <div class="container max-w-md mx-auto mt-6 content-center">
    <form action="/login" method="POST">
      <div class="form-control mx-auto">
        <label class="label">
          <span class="label-text">Email</span>
        </label> 
        <input type="email" name="email" placeholder="email" class="input input-primary input-bordered">
      </div> 
      <div class="form-control">
        <label class="label">
          <span class="label-text">Password</span>
        </label> 
        <input type="password" name="password" placeholder="password" class="input input-primary input-bordered">
      </div>
      <div class="container flex flex-row-reverse">
        <button type="submit" class="btn btn-primary mt-3 mx-1">Submit</button>
        <a href="/feed" class="btn btn-outline btn-primary m-3">Cancel</a>
      </div> 
    </form>
    
  </div>

      
    </section>
  </div>
</main>

<%- include('partials/footer') -%>

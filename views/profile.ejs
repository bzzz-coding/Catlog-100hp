<%- include('partials/header') -%>

<main>
  <section class="container">
    <div class="flex flex-row justify-center">
      <div class="basis-1/3 p-3">
        <div class="m-3">
          
              <img src="https://picsum.photos/id/1005/200/200" class="mask mask-circle mb-3">
              <p><strong>Volunteer Name</strong>: <%= user.userName %></p>
              
              <!-- <p><strong>Email</strong>: </p> -->
          

          
          <a class="btn btn-primary m-2" href="/addCat">Add a Cat</a>
          
          
          <a class="btn btn-secondary m-2" href="/feed">View All Cats</a>
          
          <a href="/logout" class="btn btn-outline btn-primary m-2">Logout</a>
        </div>
         
      </div>
      <!-- List of cats -->
      
      <div class="basis-2/3 flex flex-row flex-wrap">
        <!-- <h3 class="w-full">My Foster Cats:</h3> -->

        <% if (cats) { %>
          <% for(let cat of cats) {%>
            <div class="card card-bordered lg:w-1/3 w-full m-2">
              <a href="/cat/<%= cat._id%>">            
                <figure>
                  <img class="card-img aspect-ratio: 1 / 1" src="<%= cat.image%>">
                </figure>
              </a> 
  
              <div class="card-body">
                <h2 class="card-title"><%= cat.catName%></h2> 
                <p><%= cat.age%></p>
                <p><%= cat.breed%></p>  
                <div class="card-actions">
                  <a href="/cat/edit/<%=cat._id%>" class="btn btn-primary">Edit</a> 
                  <button class="btn btn-ghost">Archive</button>
                </div>
              </div>
            </div> 
          <% } %>
        <% } %>
        
      </div>
    </div>

  </section>

</main>


<%- include('partials/footer') -%>